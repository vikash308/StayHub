    <i class="fa-solid fa-angles-left"></i>
  </button>

  <!-- Filters -->
  <div class="filters d-flex flex-nowrap overflow-auto">
    <a href="/listing/category/?category=Trending" class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </a>
    <a href="/listing/category/?category=Rooms" class="filter">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </a>
    <a href="/listing/category/?category=Iconic" class="filter">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Iconic</p>
    </a>
    <a href="/listing/category/?category=Mountain" class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountain</p>
    </a>
    <a href="/listing/category/?category=Castles" class="filter">
      <i class="fa-solid fa-fort-awesome"></i>
      <p>Castles</p>
    </a>
    <a href="/listing/category/?category=Pool" class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Pool</p>
    </a>
    <a href="/listing/category/?category=Camping" class="filter">
