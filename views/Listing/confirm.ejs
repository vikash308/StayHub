
<% layout("/layouts/boilerPlate") %>

<style>
  /* ===============================
   BOOKING CONFIRMATION SCREEN
   =============================== */

/* Main card */
.confirmation-card {
  background: rgba(255,255,255,0.08);
  backdrop-filter: blur(18px);
  border: 1px solid rgba(255,255,255,0.15);
  border-radius: 26px;
  padding: 42px 36px;
  max-width: 420px;
  text-align: center;
  box-shadow: 0 40px 90px rgba(0,0,0,0.65);
  animation: popIn 0.6s ease forwards;
  margin: auto;
}

/* Checkmark */
.checkmark {
  width: 72px;
  height: 72px;
  margin: 0 auto 18px;
  border-radius: 50%;
  background: linear-gradient(135deg, #22c55e, #4ade80);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.2rem;
  color: #020617;
  box-shadow: 0 0 40px rgba(34,197,94,0.7);
  animation: pulse 1.6s infinite;
}

/* Heading */
.confirmation-card h2 {
  color: #f9fafb;
  font-weight: 800;
  letter-spacing: 0.4px;
  margin-bottom: 10px;
}

/* Text */
.confirmation-card p {
  color: #cbd5f5;
  font-size: 0.9rem;
  line-height: 1.6;
  margin-bottom: 26px;
}

/* Button */
.btn-home {
  display: inline-block;
  padding: 12px 36px;
  border-radius: 999px;
  font-weight: 700;
  font-size: 0.9rem;
  background: linear-gradient(135deg, #22d3ee, #a78bfa);
  color: #020617;
  text-decoration: none;
  box-shadow: 0 15px 40px rgba(99,102,241,0.6);
  transition: all 0.3s ease;
}

.btn-home:hover {
  transform: translateY(-5px);
  box-shadow: 0 25px 60px rgba(99,102,241,0.75);
}

/* ===============================
   ANIMATIONS
   =============================== */

@keyframes popIn {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 40px rgba(34,197,94,0.6);
  }
  50% {
    transform: scale(1.08);
    box-shadow: 0 0 60px rgba(34,197,94,0.9);
  }
}

/* ===============================
   MOBILE OPTIMIZATION
   =============================== */

@media (max-width: 576px) {
  .confirmation-card {
    padding: 34px 26px;
  }

  .confirmation-card h2 {
    font-size: 1.5rem;
  }
}

</style>

<div class="confirmation-card">
  <div class="checkmark">✔️</div>
  <h2>Booking Confirmed!</h2>
  <p>Your booking has been successfully completed. Thank you for choosing us!</p>
  <a href="/listing" class="btn-home">Go to Home Page</a>
</div>