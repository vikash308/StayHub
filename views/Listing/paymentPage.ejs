<% layout("/layouts/boilerPlate") %>

<style>
  /* ===============================
   PREMIUM PAYMENT PAGE
   =============================== */

body {
  background: radial-gradient(circle at top, #0f172a, #020617);
}

/* Payment card */
.payment-card {
  max-width: 520px;
  margin: auto;
  background: rgba(255,255,255,0.08);
  backdrop-filter: blur(18px);
  border-radius: 22px;
  border: 1px solid rgba(255,255,255,0.15);
  padding: 32px;
  box-shadow: 0 40px 90px rgba(0,0,0,0.65);
  transition: transform 0.4s ease;
}

.payment-card:hover {
  transform: translateY(-8px);
}

/* Heading */
.payment-card h3 {
  color: #f9fafb;
  font-weight: 700;
  letter-spacing: 0.4px;
}

/* Amount text */
.payment-card .lead {
  color: #cbd5f5;
  font-size: 1rem;
}

/* ===============================
   PAYMENT OPTIONS (CARDS)
   =============================== */

.payment-option {
  display: flex;
  align-items: center;
  gap: 14px;
  background: rgba(255,255,255,0.05);
  border: 1px solid rgba(255,255,255,0.12);
  border-radius: 16px;
  padding: 14px 16px;
  margin-bottom: 14px;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #e5e7eb;
}

.payment-option img {
  filter: brightness(1.2);
}

.payment-option input {
  accent-color: #22d3ee;
}

/* Hover */
.payment-option:hover {
  background: rgba(255,255,255,0.1);
  transform: translateY(-3px);
  box-shadow: 0 15px 35px rgba(0,0,0,0.4);
}

/* Selected state */
.payment-option:has(input:checked) {
  border-color: #22d3ee;
  box-shadow: 0 0 0 1px rgba(34,211,238,0.6),
              0 20px 50px rgba(34,211,238,0.35);
}

/* ===============================
   PAY BUTTON (CTA)
   =============================== */

#payBtn {
  margin-top: 12px;
  padding: 14px;
  font-size: 1.05rem;
  font-weight: 700;
  border-radius: 999px;
  background: linear-gradient(135deg, #22d3ee, #a78bfa);
  border: none;
  color: #020617 !important;
  box-shadow: 0 15px 40px rgba(99,102,241,0.6);
  transition: all 0.3s ease;
}

#payBtn:hover {
  transform: translateY(-6px);
  box-shadow: 0 30px 70px rgba(99,102,241,0.7);
}

/* ===============================
   MOBILE PAYMENT POLISH
   =============================== */

@media (max-width: 576px) {
  .payment-card {
    padding: 24px 20px;
  }

  #payBtn {
    font-size: 1rem;
  }
}

</style>

<div class="container py-5">

      <div class="payment-card">
        <h3 class="text-center mb-4">Complete Your Payment</h3>
        <p class="text-center lead mb-4">You're about to pay <strong>â‚¹<%= total %></strong></p>

        <h5 class="mb-3">Select Payment Method</h5>

        <label class="payment-option">
          <input type="radio" name="paymentMethod" value="upi" checked>
          <img src="https://cdn-icons-png.flaticon.com/512/825/825539.png" width="24">
          UPI (Google Pay / PhonePe / Paytm)
        </label>

        <label class="payment-option">
          <input type="radio" name="paymentMethod" value="card">
          <img src="https://cdn-icons-png.flaticon.com/512/217/217425.png" width="24">
          Credit / Debit Card
        </label>

        <label class="payment-option">
          <input type="radio" name="paymentMethod" value="netbanking">
          <img src="https://cdn-icons-png.flaticon.com/512/483/483947.png" width="24">
          Net Banking
        </label>

        <label class="payment-option">
          <input type="radio" name="paymentMethod" value="wallet">
          <img src="https://cdn-icons-png.flaticon.com/512/883/883408.png" width="24">
          Wallets
        </label>

        <label class="payment-option">
          <input type="radio" name="paymentMethod" value="emi">
          <img src="https://cdn-icons-png.flaticon.com/512/1570/1570302.png" width="24">
          EMI / Pay Later
        </label>

        <div class="text-center mt-4">
          <a href="/booking/confirm" id="payBtn" class="btn btn-success btn-lg w-100">Pay â‚¹<%= total %></a>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  document.getElementById('payBtn').addEventListener('click', function() {
    const method = document.querySelector('input[name="paymentMethod"]:checked').value;
    alert(`ðŸ’³ You selected ${method.toUpperCase()} payment.\n(This is a demo â€” no real transaction.)`);
  });
</script>